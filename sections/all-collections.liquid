{% schema %}
{
"name": "Scrollable Collections",
"tag": "section",
"settings": [
{
"type": "text",
"id": "title",
"label": "Section Title",
"default": "Our Collections"
}
],
"presets": [
{
"name": "Scrollable Collections",
"category": "Collections"
}
]
}
{% endschema %}

<div class="collections-container page-width">

    <div class="collections-scroll">
        {% for collection in collections %}
        <div class="collection-item">
            <a href="{{ collection.url }}" class="collection-link">
                {% if collection.featured_image %}
                <img src="{{ collection.featured_image | image_url: width: 600 }}" alt="{{ collection.title }}"
                    class="collection-image">
                {% else %}
                <div class="placeholder-image"></div>
                {% endif %}
                <h3 class="collection-title">{{ collection.title }}</h3>
            </a>
        </div>
        {% endfor %}
    </div>
</div>

<style>
    .collections-container {
        padding: 40px 0 20px;
    }

    .section-title {
        margin-bottom: 24px;
        text-align: center;
    }

    .collections-scroll {
        display: flex;
        gap: 16px;
        overflow-x: auto;
        padding-bottom: 12px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .collection-item {
        flex: 0 0 auto;
        width: 140px;
        overflow: hidden;
        scroll-snap-align: start;
    }

    .collection-item img{
        transition: all .1s ease;
        border-radius: 100%;
        position: relative;
    }

    .collection-item img::after{
        content: '';
        display: block;
        padding-top: 100%;
        background-color: #f2f2f2;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .collections-scroll:hover .collection-item img{
        filter: blur(4px);
    }

    .collections-scroll:hover .collection-item:hover img{
        filter: blur(0px);
    }

    .collection-image,
    .placeholder-image {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        background-color: #f2f2f2;
    }

    .collection-title {
        font-size: 14px;
        text-decoration: none;
        text-align: center;
        margin: 0;
    }

    .collection-link{
        text-decoration: none;
    }

    /* Hide scrollbar visually (optional) */
    .collections-scroll::-webkit-scrollbar {
        display: none;
    }

    .collections-scroll {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>