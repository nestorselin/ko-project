<div class="reviews-scroll-outer">
    <div class="reviews-scroll-wrapper">
        <div class="reviews-scroll">
            {% for block in section.blocks %}
            <div class="review-card">
                <div class="review-text">
                    {{ block.settings.review_text }}
                </div>
                <div class="reviewer-name">
                    â€” {{ block.settings.reviewer_name }}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
"name": "Reviews",
"settings": [],
"blocks": [
{
"type": "review",
"name": "Review",
"settings": [
{
"type": "richtext",
"id": "review_text",
"label": "Review Text"
},
{
"type": "text",
"id": "reviewer_name",
"label": "Reviewer Name"
}
]
}
],
"max_blocks": 20,
"presets": [
{
"name": "Customer Reviews"
}
]
}
{% endschema %}

<style>

    .reviews-scroll-outer {
        padding: 0 20px;
    }

    .reviews-scroll-wrapper {
        overflow-x: auto;
        padding: 20px 0;
    }

    .reviews-scroll {
        display: flex;
        gap: 20px;
    }

    .review-card {
        flex: 0 0 calc(40% - 10px);
        /* Shows ~2.5 cards on desktop */
        min-width: 300px;
        border: 1px solid var(--light-gray);
        padding: 20px 20px;
        box-sizing: border-box;
    }

    .review-text {
        font-size: 14px;
        line-height: 1.5;
    }

    .review-text p{
        margin: 0;
    }

    .reviewer-name {
        margin-top: 10px;
    }

    @media (max-width: 768px) {
        .review-card {
            flex: 0 0 80%;
            /* Show 1 card on mobile with some padding */
        }
    }

    /* Optional: Smooth scrolling */
    .reviews-scroll-wrapper {
        scroll-snap-type: x mandatory;
    }

    .review-card {
        scroll-snap-align: start;
    }

    /* Hide scrollbar (optional, Webkit browsers) */
    .reviews-scroll-wrapper::-webkit-scrollbar {
        display: none;
    }
</style>