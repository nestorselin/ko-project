<div class="reviews-scroll-outer">
    <div class="reviews-scroll-wrapper">
        <div class="reviews-scroll">
            {% for block in section.blocks %}
                <div class="review-card">
                    {% if block.settings.review_photo != blank %}
                        <div class="review-photo">
                            <img src="{{ block.settings.review_photo | img_url: 'grande' }}" alt="{{ block.settings.reviewer_name }}'s Review Photo">
                        </div>
                    {% endif %}
                    <div class="review-text">
                        {{ block.settings.review_text }}
                    </div>
                    <div class="reviewer-name">
                        â€” {{ block.settings.reviewer_name }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Reviews",
  "settings": [],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "richtext",
          "id": "review_text",
          "label": "Review Text"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name"
        },
        {
          "type": "image_picker",
          "id": "review_photo",
          "label": "Review Photo (optional)"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Customer Reviews"
    }
  ]
}
{% endschema %}

<style>
    .reviews-scroll-outer {
        padding: 0 20px;
    }

    .reviews-scroll-wrapper {
        overflow-x: auto;
        padding: 20px 0;
        scroll-snap-type: x mandatory;
    }

    .reviews-scroll {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    .review-card {
        flex: 0 0 calc(40% - 10px);
        min-width: 240px;
        max-width: 300px;
        background: var(--lightest-gray);
        padding: 20px;
        box-sizing: border-box;
        scroll-snap-align: start;
    }

    .review-card:nth-child(odd){
        margin-top: 60px;
    }

    .review-photo img {
        width: 100%;
        height: auto;
        object-fit: cover;
        margin-bottom: 15px;
    }

    .review-text {
        font-size: 14px;
        line-height: 1.5;
    }

    .review-text p {
        margin: 0;
    }

    .reviewer-name {
        margin-top: 10px;
        text-align: right;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .review-card {
            flex: 0 0 80%;
        }
    }

    /* Hide scrollbar (optional, Webkit browsers) */
    .reviews-scroll-wrapper::-webkit-scrollbar {
        display: none;
    }
</style>
